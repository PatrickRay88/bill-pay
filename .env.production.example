# Production environment variables for BillPay
# Copy to a secure location (DO NOT commit real secrets) and rename to .env or inject via your hosting provider.

# Flask / App
FLASK_ENV=production
SECRET_KEY=CHANGE_ME_TO_RANDOM_32+CHARS
USE_PLAID=true

# Database (example Postgres URL)
# DATABASE_URL=postgresql+psycopg://user:password@host:5432/billpay

# Plaid Core
PLAID_ENV=production
PLAID_CLIENT_ID=YOUR_PRODUCTION_CLIENT_ID
PLAID_SECRET_PRODUCTION=YOUR_PRODUCTION_SECRET
# Optional generic fallback (leave blank if using env-specific secrets only)
PLAID_SECRET=

# Redirect URI registered in Plaid Dashboard
PLAID_REDIRECT_URI=https://yourdomain.com/api/plaid/oauth-response

# Products (add/remove as enabled in your Plaid dashboard)
PLAID_PRODUCTS=transactions,auth,liabilities
PLAID_COUNTRY_CODES=US

# Encryption key (Fernet 32 url-safe base64 bytes). Generate with: 
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=GENERATE_FERNET_KEY

# Optional admin seed (remove after first deploy or guard behind a one-off task)
# ADMIN_SEED_EMAIL=admin@example.com
# ADMIN_SEED_PASSWORD=StrongPassword123!

# Feature flags
SANDBOX_ALLOW_ADVANCED_PRODUCTS=false

# CI / Testing (do NOT enable real Plaid integration tests in production runtime)
# RUN_PLAID_INTEGRATION=false
